def to_hebrew_name(name):
    """Convert English name to Hebrew if possible"""
    if not name:
        return "×©×œ×•×"
    if any('\u0590' <= c <= '\u05FF' for c in name):
        return name
    return HEBREW_NAMES.get(name.lower().strip(), name)

